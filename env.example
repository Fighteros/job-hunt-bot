# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret_here

# Database Configuration
DATABASE_URL=postgresql://user:password@host:port/database

# Cron Behavior
JOB_FETCH_LOOKBACK_HOURS=24
CRON_EXECUTION_TIMEZONE=UTC
CRON_SECRET=your_cron_secret_here

# Job Filtering
# Comma-separated keywords that jobs must contain (at least one)
JOB_QUERY_KEYWORDS=backend,nodejs,nestjs,typescript

# Comma-separated keywords that jobs must NOT contain
JOB_EXCLUDED_KEYWORDS=intern,manager

# Comma-separated locations to filter by
JOB_LOCATIONS=remote,egypt

# Comma-separated seniority levels to filter by
JOB_SENIORITY=junior,mid,senior

# Platform Toggles
ENABLE_REMOTEOK=true
ENABLE_WWR=true
ENABLE_WUZZUF=true
ENABLE_LINKEDIN=false

# Safety Limits
MAX_JOBS_PER_SOURCE=50
MAX_NOTIFICATIONS_PER_USER=10

