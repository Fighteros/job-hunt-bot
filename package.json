{
  "name": "job-hunt-bot",
  "version": "1.0.0",
  "description": "Daily Job Hunt Telegram Bot - Serverless job aggregation and notification system",
  "main": "index.js",
  "scripts": {
    "dev": "vercel dev",
    "build": "tsc",
    "type-check": "tsc --noEmit",
    "lint": "eslint . --ext .ts",
    "db:migrate": "node -r dotenv/config dist/scripts/migrate.js",
